/**index.wxss**/


.new {
  width: 100%;
  height: 20vh;
  display: flex;
  border-radius: 10px;
  background-color: #fff;
  padding: 8px;
  margin: 10px 0;
  box-sizing: border-box;
}

.new .new_l {
  margin-right: 10px;
}

.new .new_l image {
  width: 30vw;
  height: 100%;

}

.new .new_r {
  flex: 1;
  width: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.new_title {
  font-size: 16px;
  font-weight: 700;
  word-break: break-all;
}

.new_time {
  font-size: 13px;
  color: #b4b4b4;
}

.new_content {
  font-size: 13px;
  color: #b4b4b4;
  white-space: nowrap;
  /* 不换行 */
  overflow: hidden;
  /* 超出隐藏 */
  text-overflow: ellipsis;
  /* 超出部分显示省略号 */
}