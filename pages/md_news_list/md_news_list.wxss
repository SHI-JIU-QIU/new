/* pages/md_news_list/md_news_list.wxss */
.new {
  background-color: #fff;
  border-radius: 10px;
  padding: 10px;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;

}

.title_box {
  height: 50px;
  display: flex;
  align-items: center;
}

.title_box .new_title_l {
  width: 60px;
  font-weight: 700;
}

.title_box .new_title_r {
  flex: 1;
  color: rgb(124, 124, 124);
}

.content_box {
  height: 50px;
  display: flex;
  width: 100%;
  align-items: center;

}

.content_box .new_content_l {
  width: 60px;
  font-weight: 700;
}

.content_box .new_content_r {
  flex: 1;
  font-size: 14px;
  color: rgb(124, 124, 124);
  white-space: nowrap;
  /* 不换行 */
  overflow: hidden;
  /* 超出隐藏 */
  text-overflow: ellipsis;
  /* 超出部分显示省略号 */
}

.time_box {
  display: flex;
  align-items: center;
  height: 50px;
}

.time_box .new_ctime_l {
  width: 60px;
  font-weight: 700;
}

.time_box .new_ctime_r {
  color: rgb(124, 124, 124);
  font-size: 14px;
}

.btn {
  background-color: rgb(43, 168, 252);
  color: #fff;
  font-size: 14px;
  margin-top: 10px;
  height: 32px;
  line-height: 32px;
}